{
	"name": "domqs",
	"displayName": "DOMQS",
	"description": "Search facility by DOM query selectors in your HTML/XML files.",
	"icon": "resources/logo-vscode.png",
	"publisher": "whizsid",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.35.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/whizsid/DOMQS.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:domqs.find"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "domqs.find",
				"title": "DOMQS: Find by query selector."
			},
			{
				"command": "domqs.selectAll",
				"title": "DOMQS: Select all occurrences of find match."
			},
			{
				"command": "domqs.nextSelection",
				"title": "DOMQS: Go to the next selection."
			},
			{
				"command": "domqs.previousSelection",
				"title": "DOMQS: Go to the previous selection."
			}
		],
		"configuration": [
			{
				"title": "DOMQS Configurations",
				"properties": {
					"domqs.availableLanguages": {
						"type": "array",
						"default": [
							"html",
							"xml"
						],
						"description": "DOMQS is only available for these languages."
					}
				}
			}
		],
		"keybindings": [
			{
				"command": "domqs.find",
				"key": "ctrl+alt+f",
				"mac": "cmd+alt+f",
				"when": "editorTextFocus"
			},
			{
				"command": "domqs.selectAll",
				"key": "ctrl+alt+a",
				"mac": "cmd+alt+a",
				"when": "editorTextFocus"
			},
			{
				"command": "domqs.nextSelection",
				"key": "ctrl+alt+m",
				"mac": "cmd+alt+m",
				"when": "editorTextFocus"
			},
			{
				"command": "domqs.previousSelection",
				"key": "ctrl+alt+p",
				"mac": "cmd+alt+p",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/cheerio": "^0.22.11",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"cheerio": "^1.0.0-rc.3"
	}
}
